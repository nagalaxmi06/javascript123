    <script>
        let num = prompt("Enter a number")
        switch(true){
            case num>0:
            document.write("number is positive")
            break;
            case num==0:
            document.write("number is zero")
            break;
            case num<0:
            document.write("number is negative")
            break;
            default:
            document.write("invalid input")
        }

        
        let days = prompt("Enter the day")
        switch(days){
            case'monday':
            case'tuesday':
            case'wednesday':
            case'thursday':
            document.write("its is a week day")
            break;
            case'friday':
            case'saturday':
            case'sunday':
            document.write("its weekend")
            break;
            default:
            document.write("invalid input")
        }
       
       
       
       let a = parseInt(prompt("Enter the number of units: "), 10);

        if (a > 0) {
            let totalBill = 0;

            if (a <= 50) {
                totalBill = a * 2;
            } else if (a <= 150) {
                totalBill = (50 * 2) + ((a - 50) * 3);
            } else if (a <= 250) {
                totalBill = (50 * 2) + (100 * 3) + ((a - 150) * 5);
            } else {
                totalBill = (50 * 2) + (100 * 3) + (100 * 5) + ((a - 250) * 8);
            }
            totalBill += totalBill * 0.2;

            document.write("Total Bill: " + totalBill);
        } else {
            alert("Invalid input");
        }

        
     a=parseInt(prompt("Enter the number of students:"))
      let b= a*(a-1)/2
       document.write("Total number of handshakes are: "+b)
    </script>
    
